@import 'styl/*'

*
  margin 0
  padding 0
  box-sizing border-box

img 
  width 100%
  display block

body
  min-height 200vh
  font-family 'Yatra One', cursive

.pantalla-uno
  display grid
  grid-template-rows 1fr 1fr 7fr 1fr
  grid-template-columns 1fr 8fr 1fr
  grid-gap .3rem
  gradient()
  min-height 100vh
  min-width 100%
  color #F28482
  

.pantalla-dos
  background-color green
  min-height 100vh
  min-width 100%

.wrapper
  position relative
  grid-row-start  2
  grid-column 2 / 3

h1
  position absolute
  margin 0
  z-index 1

h2 
  position absolute
  color black
  left -5px
  top 5px
  opacity .3
  z-index 0

.titulo
  font-size 5rem

header
  padding-top 2rem
  grid-row 1 / 2
  grid-column 1 / -1
  .icon
    cursor pointer
    margin 2rem 0 2rem 0
    text-align center
    display none
    transition display 2s ease

.brain
  display flex
  justify-content center 

.brain img
  rotate()  
  height 32px
  width 32px
  cursor pointer
  border 0  
  margin 0
  &:hover
    animation-play-state paused

#word
  display inline-block
  font-size 3rem
  padding-top 6rem
  grid-row-start  2
  grid-column 2 / 3
  &:before
    content "ðŸ‘½"

.active
  display block !important
  transition display 2s ease

.obscure
  background black
  opacity .3